<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:text=""
        android:textSize="48dp"
        android:background="@color/gunmetal_gray"
        android:textColor="@color/white"
        android:gravity="end|bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/gunmetal_gray">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="7"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="8"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="9"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="/"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onOperators"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/gunmetal_gray">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="4"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="5"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="6"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="*"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onOperators"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:textColor="@color/gunmetal_gray"
        android:background="@color/gunmetal_gray">>

        <Button
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="1"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="2"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="3"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="-"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onOperators"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/gunmetal_gray">>

        <Button
            android:id="@+id/bt_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="."
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDot"/>

        <Button
            android:id="@+id/bt_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="0"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onDigits"/>

        <Button
            android:id="@+id/bt_clr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="clr"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onClr"/>

        <Button
            android:id="@+id/bt_plu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="+"
            android:textColor="@color/gunmetal_gray"
            android:onClick="onOperators"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/gunmetal_gray">>

        <Button
            android:id="@+id/bt_eql"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="28dp"
            android:text="="
            android:textColor="@color/gunmetal_gray"
            android:onClick="onEql"/>

    </LinearLayout>

</LinearLayout>